{
    "name": "pwa-canal-local",
    "private": true,
    "version": "0.0.1",
    "description": "Uma descrição breve do seu aplicativo.",
    "author": "Guilherme",
    "type": "module",
    "main": "electron/main.js",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "prepare": "svelte-kit sync || echo ''",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "start": "electron .",
        "build:linux": "electron-builder --linux"
    },
    "build": {
        "appId": "com.pwa.canallocal",
        "productName": "PWA Canal Local",
        "files": [
            "build/",
            "electron/",
            "package.json"
        ],
        "linux": {
            "target": [
                "pacman",
                "AppImage"
            ],
            "category": "Utility"
        }
    },
    "devDependencies": {
        "@capacitor-community/electron": "^5.0.1",
        "@capacitor/android": "^7.0.0",
        "@capacitor/cli": "^7.0.0",
        "@capacitor/core": "^7.0.0",
        "@capacitor/electron": "^2.5.0",
        "@sveltejs/adapter-auto": "^6.0.0",
        "@sveltejs/adapter-node": "^5.3.2",
        "@sveltejs/adapter-static": "^3.0.10",
        "@sveltejs/kit": "^2.5.28",
        "@sveltejs/vite-plugin-svelte": "^4.0.0-next.6",
        "@tailwindcss/typography": "^0.5.14",
        "@types/bcryptjs": "^3.0.0",
        "@types/cookie-parser": "^1.4.10",
        "autoprefixer": "^10.4.20",
        "electron": "^29.4.6",
        "electron-builder": "^24.13.3",
        "svelte": "^5.0.0",
        "svelte-check": "^4.0.0",
        "tailwindcss": "^3.4.9",
        "typescript": "^5.0.0",
        "vite": "^5.4.20"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "esbuild"
        ]
    },
    "dependencies": {
        "@capacitor-community/file-opener": "^7.0.1",
        "@capacitor/android": "^7.0.0",
        "@capacitor/file-transfer": "^1.0.6",
        "@capacitor/filesystem": "^7.0.0",
        "@capacitor/local-notifications": "^7.0.0",
        "@capacitor/toast": "^7.0.0",
        "@jofr/capacitor-media-session": "^4.0.0",
        "@lucia-auth/adapter-sqlite": "^3.0.2",
        "bcryptjs": "^3.0.2",
        "hls.js": "^1.6.13",
        "lucia": "^3.2.2",
        "lucide-svelte": "^0.544.0"
    }
}
